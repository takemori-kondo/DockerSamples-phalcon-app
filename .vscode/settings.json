{
    // common settings
    "files.eol": "\n",
    "editor.detectIndentation": false,
    "editor.guides.indentation": true,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "boundary",
    "explorer.confirmDelete": false,
    "window.zoomLevel": 0,
    "editor.fontFamily": "MeiryoKe_Console, monospace",
    "git.ignoreMissingGitWarning": true,
    "terminal.integrated.fontFamily": "MeiryoKe_Console, monospace",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // phpunit
    "phpunit.command": "docker exec -t php_fpm /bin/sh -c",
    "phpunit.php": "php",
    "phpunit.phpunit": "/var/www/vendor/bin/phpunit",
    "phpunit.args": [
        "-c",
        "/var/www/phpunit.xml"
    ],
    "phpunit.paths": {
        "${workspaceFolder}/projects/php_fpm": "/var/www",
    },
}